<header class="subcat">
  <h1><%= @subcat.title %></h1>
  <a href="<%=new_subcat_ad_url(@subcat) %>">Post an Ad</a>
</header>

<main class="ads-index">


  <section class="ad-filter">
  	<form class="filter" action="<%= filter_subcat_ads_url(@subcat) %>" method="post">
  		<%= auth_token %>
  		<%= form_input("search", "text", "search-words", "search_words", @search_words) %>
  		<%= form_input("min price", "number", "min", "min_price", @min_price, "price-filter" ) %>
  		<%= form_input("max price", "number", "max", "max_price", @max_price, "price-filter" ) %>
      <%= form_input("latest possible move-in", "date", "move-in-date", "start_date", @start_date, "date-filter") %>
  		<%= form_input("cats", "checkbox", "cats-ok", "cats_ok", @cats_ok ) %>
  		<%= form_input("dogs", "checkbox", "dogs-ok", "dogs_ok", @dogs_ok ) %>
  		<%= form_submit("filter") %>
  	</form>
  </section>

    <section class="user-dashboard posts-list">

      <table class="user-posts-table">
        <thead>
          <tr>
            <th>title</th>
            <th>price</th>
            <th>bedrooms</th>
            <th>available by</th>
            <th>area</th>
            <th>posted date</th>
          </tr>
        </thead>
        <tbody>
          <%= render @ads %>
        </tbody>
      </table>

    </section>

  <!-- <ul class="ads-list">
