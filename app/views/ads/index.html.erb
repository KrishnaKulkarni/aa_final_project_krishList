<main>
<section>
	<form class="filter" action="<%= filter_subcat_ads_url(@subcat) %>" method="post">
		<%= auth_token %>
		<div class="filter-parameters clearfix">
			<div class="typables clearfix">
				<div class="non-price">
			  		<%= form_input("search (title or description)", "text", "search-words", "search_words", @search_words) %>
					<%= form_input("latest possible move-in", "date", "move-in-date", "start_date", @start_date, "date-filter") %>
				</div>
				<div class= "price">
			  		<%= form_input("min price", "number", "min", "min_price", @min_price, "price-filter" ) %>
			  		<%= form_input("max price", "number", "max", "max_price", @max_price, "price-filter" ) %>
		     	</div>
 	
			</div>

			<div class="checkables">
				<div class="regions clearfix">
					<h5>Areas</h5>
				    <% %w<mnh brk que brx stn jsy lgi wch fct>.each do |region| %>
				            <%= form_input(
				            region, "checkbox", "#{region}-ok",
				             "regions[#{region}]", true, "",
				              ("checked" if (@regions.nil? || @regions.include?(region)) ) )%>
				    <% end %>
				</div>

			</div>
	
			
		</div>
		
		<div class="optionables">
			<div class="options clearfix">
				<h5>Other Options</h5>
				<% @idio_options.each do |id_op|  %>
				<%= form_input(id_op.title, id_op.input_type, "", "options[#{id_op.id}]", nil ) %>
				<% end  %>
			</div>
		</div>
				<%= form_input("Create alert on filter", "checkbox", "save-alert", "save_alert", nil ) %>
				<%= form_submit("filter") %>
	</form>
</section>

<section class="all-posts-list">

  <table class="all-posts-table">
    <thead>
      <tr>
        <th class="title">title</th>
        <th><%= @subcat.featured_option_class1 && OptionClass.find(@subcat.featured_option_class1).title %></th> 
      	<th><%= @subcat.featured_option_class2 && OptionClass.find(@subcat.featured_option_class2).title %></th>
        <th>area</th>
		<th>address</th>
        <th>posted date</th>
      </tr>
    </thead>
    <tbody>
      <%= render @ads %>
    </tbody>
  </table>

</section>
</main>
<script>

function makeRowsClick() {
      $(".clickable-row").click(function() {
            window.document.location = $(this).attr("href");
      });
}

 $(document).ready(makeRowsClick);
 $(document).on('page:load', makeRowsClick);
 // $(document).on('page:change', makeRowsClick);
</script>

