<script>
$(document).ready(function(){


  var $thumbList = $("#apt-thumbs-list");
  // var $catForm = $("#cat-new-form");
  var $aptFeatured = $("#featured-apt");
  
  $(".clickable-thumb").click(function() {
	  $(".selected").removeClass("selected");
	  $(this).addClass("selected");
	  var id = $(this).attr('id');
	  var id_num = id.charAt(id.length - 1)
	  $(".featured").removeClass("featured");
	  $("#image-" + id_num).addClass("featured");
  });
  

  $thumbList.on("ajax:success", "a", function(event, data){
    console.log("html partial show", data);
    $aptFeatured.html(data);
  });


  $catList.on("ajax:success", "form", function(event, data){
    console.log("cat toggle form", data);

    var $li = $(event.target).closest("li");

    if(data.is_favorite){
      $li.addClass("is-favorite");
    } else {
      $li.removeClass("is-favorite");
    }
  });

  $catForm.on("ajax:success", function(event, data){
    console.log("new cat form submitted", data);
    $catList.append(data);
    $catForm[0].reset();
  });

});

</script>